@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.SignalR.Client;
@using Newtonsoft.Json;
@using WebApplicationConges.Data;
@using WebApplicationConges.Model;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"] - Gestion des congés</title>

    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />

    @RenderSection("Header", required: false)

    @{
        try
        {
            // SignalR build hub
            if (Toolkit.Connection == null)
            {
                Toolkit.Connection = new HubConnectionBuilder()
                .WithUrl(new Uri($"{HttpContextAccessor.HttpContext.Request.Scheme}://{HttpContextAccessor.HttpContext.Request.Host}{HttpContextAccessor.HttpContext.Request.PathBase}/CongesHub"))
                .Build();

                // SignalR start connection
                await Toolkit.Connection.StartAsync();
            }
        }
        catch (Exception)
        {
            // Nothing: SignalR is not mandatory
        }
     }
</head>
<body>    
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Basculer</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-page="/Index" class="navbar-brand">
                    <span><img src="~/images/logo.png" width="48" title="Gestion des congés" alt="Gestion des congés" /> Gestion des congés</span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-page="/Index"><i class="fa fa-home fa-lg"></i> Accueil</a>
                    </li>
                    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.User.IsInRole("admin"))
                    {
                        <li>
                            <a asp-page="/Admin"><i class="fa fa-cog fa-lg"></i> Administration</a>
                        </li>
                    }
                    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.User.IsInRole("manager"))
                    {
                         <li><a asp-page="/Manage"><i class="fa fa-users fa-lg"></i> Gérer l'équipe</a></li>
                    }
                    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.User.IsInRole("drh"))
                    {
                        <li><a asp-page="/RH/Compta"><i class="fa fa-users fa-lg"></i> Ressources humaines</a></li>
                    }
                    <li><a asp-page="/Calendar"><i class="fa fa-calendar fa-lg"></i> Calendrier</a></li>
                    <li><a asp-page="/About"><i class="fa fa-info fa-lg"></i> A propos</a></li>
                    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <li><a asp-page="/Account/SignedOut"><i class="fa fa-sign-out fa-lg"></i> Se déconnecter</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @{
            string userMail = "";
            try
            {
                System.Security.Claims.Claim claim = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "CurrentUser");
                if (claim != null)
                {
                    User user = JsonConvert.DeserializeObject<User>(HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "CurrentUser")?.Value);
                    if (user != null)
                        userMail = user.Email;
                }
            }
            catch (Exception)
            {
                // Nothing: SignalR is not mandatory
            }
        }
        
        @Html.Hidden("usermail", userMail, new { @id = "usermail" })
        <div class="alert alert-info alert-dismissible" id="SignalRDisplay" role="alert" style="display:none;margin-top:20px;">
            <a href="#" class="alert-link"><span id="SignalRSubject"></span></a> <span id="SignalRBody"></span>
        </div>
        @RenderBody()
        <hr />
        <footer>            
            <p>@Toolkit.Copyright</p>
        </footer>
    </div>

    <environment names="Development,Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/my-favico.js"></script>
        <script src="~/js/signalr-subscribe.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
