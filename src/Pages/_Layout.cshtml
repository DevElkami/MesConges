@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.SignalR.Client;
@using Newtonsoft.Json;
@using WebApplicationConges.Data;
@using WebApplicationConges.Model;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion des congés</title>

    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

    @RenderSection("Header", required: false)

    @{
        try
        {
            // SignalR build hub
            if (Toolkit.Connection == null)
            {
                Toolkit.Connection = new HubConnectionBuilder()
                .WithUrl(new Uri($"{HttpContextAccessor.HttpContext.Request.Scheme}://{HttpContextAccessor.HttpContext.Request.Host}{HttpContextAccessor.HttpContext.Request.PathBase}/CongesHub"), Microsoft.AspNetCore.Http.Connections.HttpTransportType.WebSockets)
                .Build();

                // SignalR start connection
                await Toolkit.Connection.StartAsync();
            }
        }
        catch (Exception)
        {
            // Nothing: SignalR is not mandatory
        }
     }
</head>
<body>    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">                
                <a asp-area="" asp-page="/Index" class="navbar-brand">
                    <span><img src="~/images/logo.png" width="48" title="Gestion des congés" alt="Gestion des congés" /> Gestion des congés</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                        
                        <li>
                            <a class="nav-link" asp-area="" asp-page="/Index"><i class="fa-solid fa-house"></i> Accueil</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Admin"><i class="fa fa-cog"></i> Administration</a>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.User.IsInRole("manager"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Manage"><i class="fa fa-users"></i> Gérer l'équipe</a></li>
                        }
                        @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated && HttpContextAccessor.HttpContext.User.IsInRole("drh"))
                        {
                            <li><a class="nav-link" asp-page="/RH/Compta"><i class="fa fa-users"></i> Ressources humaines</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Calendar"><i class="fa fa-calendar"></i> Calendrier</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/About"><i class="fa fa-info"></i> A propos</a></li>
                        @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Account/SignedOut"><i class="fa fa-sign-out"></i> Se déconnecter</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @{
            string userMail = "";
            try
            {
                System.Security.Claims.Claim claim = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "CurrentUser");
                if (claim != null)
                {
                    User user = JsonConvert.DeserializeObject<User>(HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "CurrentUser")?.Value);
                    if (user != null)
                        userMail = user.Email;
                }
            }
            catch (Exception)
            {
                // Nothing: SignalR is not mandatory
            }
        }
        
        @Html.Hidden("usermail", userMail, new { @id = "usermail" })
        <div class="alert alert-info alert-dismissible" id="SignalRDisplay" role="alert" style="display:none;margin-top:20px;">
            <a href="#" class="alert-link"><span id="SignalRSubject"></span></a> <span id="SignalRBody"></span>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        
        <footer class="border-top footer text-muted">
            <div class="container">            
                <p style="margin-top:10px;">@Toolkit.Copyright</p>
            </div>
        </footer>
    </div>

    <environment names="Development,Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/my-favico.js"></script>
        <script src="~/js/signalr-subscribe.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
