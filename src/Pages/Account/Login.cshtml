@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="inner-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <h2 class="text-center">Bienvenue</h2>
                <form role="form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Login">Login</label>
                        <input asp-for="Input.Login" type="text" class="form-control" placeholder="Votre login" maxlength="49">
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Mot de passe</label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Votre mot de passe" maxlength="30">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default"><i class="fa fa-sign-in"></i> Connexion</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts 
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
