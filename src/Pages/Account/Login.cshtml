@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<form role="form" method="post">
    <h2 class="text-center">Bienvenue</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Input.Login">Login</label>
        <div class="col-sm-10">
            <input asp-for="Input.Login" type="text" class="form-control" placeholder="Votre login" maxlength="49">
            <span asp-validation-for="Input.Login" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Input.Password">Mot de passe</label>
        <div class="col-sm-10">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Votre mot de passe" maxlength="30">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>
    
    <div class="col-md-12 text-center">
        <button type="submit" class="btn btn-dark"><i class="fa fa-sign-in"></i> Connexion</button>
    </div>
</form>

@section Scripts 
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
