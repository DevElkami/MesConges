@page
@model WebApplicationConges.Pages.Users.EditModel
@{
    ViewData["Title"] = "Modifier un utilisateur";
}
<h3>Modifier un utilisateur</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<form role="form" method="post">
    <div class="form-group">
        <label asp-for="User.Name">Nom complet</label>
        <input asp-for="User.Name" type="text" class="form-control" placeholder="Nom complet de l'utilisateur'" maxlength="100" />
        <span asp-validation-for="User.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.FamilyName">Nom</label>
        <input asp-for="User.FamilyName" type="text" class="form-control" placeholder="Nom de l'utilisateur'" maxlength="49" />
        <span asp-validation-for="User.FamilyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Surname">Prénom</label>
        <input asp-for="User.Surname" type="text" class="form-control" placeholder="Prénom de l'utilisateur'" maxlength="49" />
        <span asp-validation-for="User.Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Description">Description</label>
        <textarea asp-for="User.Description" class="form-control" maxlength="254"></textarea>
        <span asp-validation-for="User.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.PhoneNumber">Téléphone</label>
        <textarea asp-for="User.PhoneNumber" class="form-control" maxlength="50"></textarea>
        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Matricule">Matricule</label>
        <textarea asp-for="User.Matricule" class="form-control" maxlength="20"></textarea>
        <span asp-validation-for="User.Matricule" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.ServiceId">Service</label>
        @Html.DropDownListFor(x => Model.User.ServiceId, new SelectList(Model.Services, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "ServiceId" })
        <span asp-validation-for="User.ServiceId" class="text-danger"></span>
    </div>

    <input asp-for="User.Email" type="hidden" class="form-control" />
    <button type="submit" class="btn btn-default">Modifier</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
